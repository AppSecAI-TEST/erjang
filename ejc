#!/bin/bash

## Script to run the ERLConsole
##

EJC_CMD=`which "$0"`
EJC_DIR=`dirname "$EJC_CMD"`
EJC_BIN=`readlink -m "$EJC_DIR"`

source $EJC_BIN/env_cfg

exec java \
    -server \
    -Xss1m \
    -Xmx2g \
    $OSX_DOCK_ICON \
    $OSX_DOCK_NAME \
    -Derj.threads=1 \
    -cp $EJC_BIN/erjang-0.1.jar erjang.console.ERLConsole \
    -root "$ERL_ROOT" \
    +e "$ERTS_VSN" \
    -name erjang@`hostname` \
    -home "$HOME" \
    $*

